<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Soft shadow beneath for depth -->
    <item
        android:top="1dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#0D000000" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Main glass layer with gradient (transparent white) -->
    <item>
        <shape android:shape="rectangle">
            <!-- Gradient: lighter at top (highlight), slightly darker at bottom -->
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#E6FFFFFF"
                android:centerColor="#D9FFFFFF"
                android:endColor="#CCFFFFFF" />
            <corners android:radius="28dp" />
            <!-- Thin luminous border -->
            <stroke
                android:width="0.75dp"
                android:color="#B3FFFFFF" />
        </shape>
    </item>
    
    <!-- Top edge glossy highlight -->
    <item
        android:top="0dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <!-- Top edge highlight gradient -->
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners
                android:radius="28dp"
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
    
</layer-list>


