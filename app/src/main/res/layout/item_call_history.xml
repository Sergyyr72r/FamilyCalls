<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="12dp">

    <!-- Avatar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Avatar" />
    </androidx.cardview.widget.CardView>

    <!-- Call Icon -->
    <ImageView
        android:id="@+id/ivCallIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCallerName"
        app:layout_constraintStart_toEndOf="@+id/cvAvatar"
        app:layout_constraintTop_toTopOf="@+id/tvCallerName" />

    <!-- Caller Name -->
    <TextView
        android:id="@+id/tvCallerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Caller Name"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvCallTime"
        app:layout_constraintEnd_toStartOf="@+id/tvCallDate"
        app:layout_constraintStart_toEndOf="@+id/ivCallIcon"
        app:layout_constraintTop_toTopOf="@+id/cvAvatar"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Call Time -->
    <TextView
        android:id="@+id/tvCallTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Call time"
        android:textColor="#808080"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/cvAvatar"
        app:layout_constraintEnd_toStartOf="@+id/tvCallDate"
        app:layout_constraintStart_toEndOf="@+id/ivCallIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvCallerName" />

    <!-- Call Date -->
    <TextView
        android:id="@+id/tvCallDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textColor="#808080"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCallerName"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvCallerName" />

</androidx.constraintlayout.widget.ConstraintLayout>
